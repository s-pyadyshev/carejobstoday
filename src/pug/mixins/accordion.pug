mixin accordion(title, content)
  ul.accordion-list
    li.accordion-list__item
      .accordion
        .accordion__header
          button.accordion__toggle(data-accordion aria-expanded="false")
            h3.accordion__title= title
            .accordion__toggle-closed +
            .accordion__toggle-opened -
        .accordion__content(hidden)= content

mixin accordion-native(title, content, open = false)
  details(open = open ? '' : null)
    summary= title
    p= content
mixin search(advanced)
  section.search#search.js-search(class!= advanced)
    .container
      button(type="button").search__select.button.button--primary.js-search-select
        | Search jobs
      form.search__form
        .search__row
          .search__info
            if advanced
              label.label.text-white(for="search-job")
                | What?
            input.input#search-job(name="search-job" placeholder="Job title")
          .search__aside
            if advanced
              label.label.text-white(for="search-area")
                | Where?
            .select-area
              input.input#search-area(name="search-area" placeholder="Town, city or postcode")
              select(name="select-area").select
                option(value="10 miles") 10 miles
                option(value="20 miles") 20 miles
                option(value="30 miles") 30 miles
          button(type="submit").button.button--primary
            | Search jobs
        if advanced
          .search__row
            .search__info.search__info
              select(name="select-locations")
                option(value="" disabled selected) Locations
                option(value="Location 1") Location 1
                option(value="Location 2") Location 2
                option(value="Location 3") Location 3
              select(name="select-job-type")
                option(value="" disabled selected) Job type
                option(value="Type 1") Type 1
                option(value="Type 2") Type 2
                option(value="Type 3") Type 3
            .search__aside
              select(name="select-company")
                option(value="" disabled selected) Company
                option(value="Company 1") Beyound Limits
                option(value="Company 2") Dimensions Care
                option(value="Company 3") Juventas
                option(value="Company 4") Premier Care Management
                option(value="Company 5") Procare Wales
                option(value="Company 6") Seaside Care
                option(value="Company 7") Sportfit
              button.toggle.button(type="button" data-collapse-target="quiz")
                span Is caring right for me?
                +svg('chevron-down')
          .search__row
            button(type="submit").button.button--primary
              | Search jobs
            button.toggle.button(type="button" data-collapse-target="quiz")
              span Is caring right for me?
              +svg('chevron-down')
  .search__quiz-form(data-collapse-content="quiz")
    include ../components/quiz.pug